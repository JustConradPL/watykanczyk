<Window x:Class="watykańczyk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:watykańczyk"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:vm="clr-namespace:watykańczyk.Viewmodel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize">
    <Window.Resources>
        <vm:NoBtn x:Key="MainViewModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource MainViewModel}">
        <Image gif:ImageBehavior.AnimatedSource="/watykańczyk;component/cooltext.gif"
               gif:ImageBehavior.RepeatBehavior="Forever" Margin="0,0,-0.4,286"/>

        <Button Content="tak" Width="200" Height="100"
                Margin="94,276,499.6,44" 
                FontSize="40" FontWeight="Bold"
                Command="{Binding YesClicked}"/>
        
        <Button Content="nie" Width="200" Height="100"
                Margin="500,276,93.6,44" 
                FontSize="40" FontWeight="Bold"
                Command="{Binding NoClicked}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                />
    </Grid>
</Window>
